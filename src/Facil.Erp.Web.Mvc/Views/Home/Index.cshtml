@using Facil.Erp.Web.Startup
@{
    ViewBag.Title = L("HomePage");
    ViewBag.CurrentPageName = PageNames.Home;
}

@section scripts
{
    <environment names="Development">
        <script src="~/libs/chartjs/dist/Chart.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Home/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/_Bundles/home-index.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark">@L("HomePage")</h1>
            </div>
        </div>
    </div>


</div>

<div class="text-center">

    <div style="height: 550px">
        <picture>
            <source media="(max-width: 750px)" srcset="~/img/bio-1080.png" />
            <source media="(max-width: 1050px)" srcset="~/img/bio-500.png" />

            <img src="~/img/bio-400.png" style="height: 200px" />
            
        </picture>
    </div>
</div>

<section class="content">
<div class="container-fluid">



        @* @await Html.PartialAsync("_Dashboard.cshtml") *@
</div>
</section>
